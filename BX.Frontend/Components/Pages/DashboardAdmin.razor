@page "/dashboard-admin"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
<PageTitle>Dashboard Administrador</PageTitle>

<h2 class="text-center pt-5 mb-5">Bienvenido Administrador</h2>

<div class="container">
    <div class="row justify-content-center gy-5 gx-4">
        <div class="col-12 col-md-6">
            <NavLink href="/admin/users" class="w-100 py-5 btn btn-primary btn-lg text-center shadow-lg text-decoration-none">
                <div class="fs-1">👥</div>
                <strong class="fs-4 d-block">Gestión de Usuarios</strong>
                <span class="fs-6">Administra clientes y empleados.</span>
            </NavLink>
        </div>

        <!-- Botón: Proyectos -->
        <div class="col-12 col-md-6">
            <NavLink href="/projects" class="w-100 py-5 btn btn-secondary btn-lg text-center shadow-lg text-decoration-none">
                <div class="fs-1">🏗️</div>
                <strong class="fs-4 d-block">Gestión de Proyectos</strong>
                <span class="fs-6">Controla el desarrollo de los proyectos.</span>
            </NavLink>
        </div>

        <!-- Botón: Propiedades -->
        <div class="col-12 col-md-6">
            <NavLink href="/" class="w-100 py-5 btn btn-success btn-lg text-center shadow-lg text-decoration-none">
                <div class="fs-1">🏘️</div>
                <strong class="fs-4 d-block">Gestión de Propiedades</strong>
                <span class="fs-6">Consulta y administra propiedades.</span>
            </NavLink>
        </div>

        <!-- Botón: Proveedores -->
        <div class="col-12 col-md-6">
            <NavLink href="/suppliers" class="w-100 py-5 btn btn-warning btn-lg text-center shadow-lg text-dark text-decoration-none">
                <div class="fs-1">🚚</div>
                <strong class="fs-4 d-block">Gestión de Proveedores</strong>
                <span class="fs-6">Maneja proveedores y materiales.</span>
            </NavLink>
        </div>
    </div>
</div>
